    if((archivo = fopen("puntajes.txt","rt")) == NULL){
        fclose(archivo);
        archivo = fopen("puntajes.txt","wt");
        fclose(archivo);
        printf("Creando Fichero");
        Sleep(500);
        printf(".");
        Sleep(500);
        printf(".");
        Sleep(500);
        printf(".");
        Sleep(500);
        system("cls");
        printf("Presione cualquier tecla para continuar");
        _getch();
    }
}

